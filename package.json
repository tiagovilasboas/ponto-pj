{
  "name": "ponto-pj",
  "author": "Tiago Vilas Boas <tcarvalhovb@gmail.com>",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "analyze": "npm run build:analyze && echo 'Bundle analysis complete. Check dist/ folder for build files.'",
    "bundle:analyze": "echo 'Bundle size analysis:' && du -sh dist/js/* dist/css/* 2>/dev/null || echo 'Use npm run build:analyze first'",
    "lighthouse": "echo 'Para usar lighthouse, primeiro execute: npm run preview' && echo 'Depois em outro terminal: npx lighthouse http://localhost:4173 --output=html --output-path=./lighthouse-report.html'",
    "lighthouse:ci": "echo 'Para CI/CD, use: npx lighthouse https://ponto-pj.vercel.app --output=json --output-path=./lighthouse-report.json --chrome-flags=--headless'",
    "prepare": "husky",
    "pre-commit": "lint-staged && npm run test:run",
    "pre-push": "npm run type-check && npm run test:coverage",
    "test:supabase": "node scripts/test-supabase-auth.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mantine/core": "^8.1.2",
    "@mantine/dates": "^8.1.2",
    "@mantine/hooks": "^8.1.2",
    "@mantine/notifications": "^8.1.2",
    "@supabase/supabase-js": "^2.50.2",
    "@tabler/icons-react": "^3.34.0",
    "@tanstack/react-virtual": "^3.13.12",
    "dayjs": "^1.11.13",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.3",
    "react-router-dom": "^6.30.1",
    "vite-plugin-pwa": "^1.0.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
